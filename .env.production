# Node environment
NODE_ENV=production

# Application Port
APP_PORT=3000

# Container Configuration
CONTAINER_NAME=pokemon-app

# Image Configuration
IMAGE_NAME=pokemon-app
IMAGE_TAG=latest

# Serve Configuration
SERVE_STATIC_DIR=dist

# Health Check Configuration
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=3
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=5

# Network Configuration
NETWORK_MODE=bridge

# Logging
LOG_LEVEL=info

# Build Arguments
BUILD_NODE_VERSION=20-alpine
